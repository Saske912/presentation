# Dockerfile для разработки (dev сервер)

FROM node:20-alpine

WORKDIR /app

# Настраиваем npm для лучшей работы с сетью
RUN npm config set registry https://registry.npmjs.org/ && \
    npm config set fetch-retries 5 && \
    npm config set fetch-retry-mintimeout 20000 && \
    npm config set fetch-retry-maxtimeout 120000

# Устанавливаем зависимости
COPY package.json package-lock.json ./
RUN npm ci --prefer-offline --no-audit || npm install --prefer-offline --no-audit

# Копируем исходные файлы
COPY . .

# Экспонируем порт для dev сервера (Slidev использует 3030 по умолчанию)
EXPOSE 3030

# Запускаем dev сервер
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]

